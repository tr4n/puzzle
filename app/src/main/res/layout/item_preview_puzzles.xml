<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tr4n.puzzle.data.model.PreviewChallenge" />

        <variable
            name="listener"
            type="com.tr4n.puzzle.listener.OnSimpleItemClick&lt;com.tr4n.puzzle.data.model.PreviewChallenge&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:widthPercent="@{0.3f}"
        android:foreground="?android:attr/selectableItemBackground"
        app:safeClick="@{v -> listener.onClick(item)}"
        tools:layout_width="@dimen/dp_100">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_4"
            android:layout_marginVertical="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_8"
            app:isVisible="@{!item.challenge.imageName.isEmpty()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:fileName="@{item.challenge.imageName}"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:text="@{item.title}"
            android:textAllCaps="true"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/sp_14"
            app:isVisible="@{!item.challenge.imageName.isEmpty()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:text="@tools:sample/first_names" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_4"
            android:layout_marginVertical="@dimen/dp_4"
            android:background="@drawable/bg_dash_radius_16"
            android:foreground="?android:attr/selectableItemBackground"
            app:isVisible="@{item.challenge.imageName.isEmpty()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_image_search_24"
                android:tint="@color/gray" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
